{% if menu %}
<nav class="c-navigation js-primary-nav">

  <ul class="c-navigation__list">

    {% for item in menu %}
    
    <li class="{{ item.classes | join(' ') }} c-navigation__item">

      <a class="c-navigation__link" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}<span class="icon"></span></a>
      
      {% if item.get_children %}

      <ul class="c-navigation__list c-navigation__children">

        <li class="c-navigation__title">{{ item.title }}</li>

        {% for child in item.get_children %}

          <li class="{{ child.classes | join(' ') }} c-navigation__item">
            <a class="c-navigation__link c-navigation__link--child" target="{{ child.target }}" href="{{ child.link }}">{{ child.title }}</a>
          </li>

        {% endfor %}

      </ul>

      {% endif %}

    </li>
    {% endfor %}

  </ul>

</nav>
{% endif %}
