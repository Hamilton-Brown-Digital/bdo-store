{% extends 'base.twig' %}

{% block content %}

    {% if fn('is_user_logged_in') %}
        {% include 'partials/hero.twig' with {
            product: true,
            type: 'shallow'
        } %}
    {% endif %}

    {% if fn('is_page', 'register') %}

        {% filter shortcodes %}
            [wc_reg_form]
        {% endfilter %}

    {% else %}

        {% filter shortcodes %}
            [woocommerce_my_account]
        {% endfilter %}

    {% endif %}

{% endblock %}