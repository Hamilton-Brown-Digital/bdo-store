<div class="c-hero">

    <div class="o-row o-row--no-margin">
        <div class="o-grid-container c-hero__container">

        <div class="c-hero__main">
            <div class="c-hero__main__inner">
                <h1 class="c-hero__heading">{{ post.hero_header }}</h1>
                {% if post.hero_intro %}
                <p class="c-hero__intro">{{ post.hero_intro }}</p>
                {% endif %}
                {% if post.has_image == false and post.hero_content %}
                    <p class="c-hero__text">{{ post.hero_content }}</p>
                {% endif %}
                {% if post.hero_link %}
                    {% include "./elements/button.twig"
                        with  {
                            title : post.hero_link['title'],
                            url: post.hero_link['url'],
                            target: post.hero_link['target'],
                            color: 'red'
                        }
                    %}
                {% endif %}
            </div>
        </div>

        <div class="c-hero__image-text">
            {% if post.has_image %}
                {% if post.hero_image %}
                    <img class="c-hero__image-text__image" src="{{ TimberImage(post.hero_image).src }}" srcset="{{ TimberImage(post.hero_image).srcset()}}" />
                {% endif %}
            {% else %}
                {% if post.hero_content %}
                    <p class="c-hero__image-text__text">{{ post.hero_content }}</p>
                {% endif %}
            {% endif %}
        </div>

        </div>
    </div>

</div>