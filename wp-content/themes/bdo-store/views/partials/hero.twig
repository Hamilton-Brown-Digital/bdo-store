{% if not (carousel or product) %}
    {% set header = post.hero_header %}
    {% set intro = post.hero_intro %}
    {% set content = post.hero_content %}
    {% set link = post.hero_link %}
    {% set image = post.hero_image %}
    {% set moreContent = post.hero_more_content %}
    {% set type = post.hero_type %}
    {% set pageType = post.hero_page_type %}
{% endif %}

<div class="c-hero {%if pageType == 'category' %}c-hero--{{ pageType }}{% endif %}{% if type == 'shallow' %} c-hero--{{ type }}{% endif %}{% if product %} c-hero--product{% endif %}">

    <div class="o-row o-row--no-margin o-row--no-padding">

        <div class="o-grid-container c-hero__container">

            <div class="c-hero__main">

                <div class="c-hero__main__inner">

                    {% if product and category %}
                        {{ category }}
                    {% endif %}

                    <h1 class="c-hero__heading">
                    {% if header %}
                        {{ header }}
                    {% else %}
                        {{ post.title }}
                    {% endif %}
                    </h1>

                    {% if pageType == 'category' and intro %}
                    <p class="c-hero__intro">{{ intro }}</p>
                    {% endif %}

                    {% if pageType == 'category' and content %}
                        <p class="c-hero__text">{{ content }}</p>
                    {% endif %}

                    {% if pageType == 'category' and link %}
                        {% include "./elements/button.twig"
                            with  {
                                title : link['title'],
                                url: link['url'],
                                target: link['target'],
                                color: 'red'
                            }
                        %}
                    {% endif %}

                </div>

            </div>

            {% if moreContent != 'none'%}
            <div class="c-hero__image-text">
                {% if moreContent == 'image' and image %}
                    <img class="c-hero__image-text__image" src="{{ TimberImage(image).src }}" srcset="{{ TimberImage(image).srcset()}}" />
                {% endif %}

                {% if moreContent == 'text' and pageType == 'category' and content %}
                    <p class="c-hero__image-text__text">{{ content }}</p>
                {% endif %}
            </div>
            {% endif %}

        </div>

    </div>

</div>